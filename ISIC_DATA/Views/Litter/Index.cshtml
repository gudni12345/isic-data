@model PagedList.IPagedList<ISIC_DATA.Models.Litter>
@using PagedList.Mvc; 
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "List of litters";
}

<h2>Litters</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Litter", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)  
        <input type="submit" value="Search" />
    </p>
}

<table>
    <tr>
        <th>
            LitterId
        </th>
        <th>
            Mother
        </th>
        <th>
            Father
        </th>
        <th>
            DateOfBirth
        </th>
        <th>
            Breeder
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LitterId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reg_Mother)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reg_Father)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Breeder.Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LitterId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LitterId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LitterId })
        </td>
    </tr>
}

</table>


<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager( Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter }) )

