@model ISIC_DATA.Models.Person

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Create breeder</h3>
</div>
        
        @using (Html.BeginForm("CreateBreeder", "Person", FormMethod.Post, new { @class = "modal-form", @id = "breeder", @name = "breeder" }))
        {
        @Html.ValidationSummary(true)
        <div class="modal-body">
        <div>
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div>
            @Html.LabelFor(model => model.Address)
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div>
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div>
            @Html.LabelFor(model => model.CountryId, "Country")
            @Html.DropDownList("CountryId", String.Empty)
            @Html.ValidationMessageFor(model => model.CountryId)
        </div>
        </div>
     <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" id="save" class="btn btn-primary">Save</button>  
      </div>
       }

<script type="text/javascript">
    $(function () {
        $('#save').click(function () {
            $('form#breeder').submit();
        });
    });

</script>


