  <div class="span2">
    <ul class="nav nav-pills nav-stacked" id="myTabs">
      <li class="active"><a href="#pedigree">Pedigree</a></li>
      <li><a href="#litter">Litter</a></li>
      <li><a href="#testmate">Testmate (inbreeding)</a></li>
      <li><a href="#health">Health & apperance</a></li>
    </ul>
  </div>

  <!-- Content -->
