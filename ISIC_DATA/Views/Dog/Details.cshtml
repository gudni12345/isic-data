@using BootstrapSupport
@model ISIC_DATA.Models.Dog

@{
    ViewBag.Title = "Details";
}

  <div class="row dog-details">
      <div class="span5">
          <h2 class="dogTitle">@Html.DisplayFor(model => model.Name)</h2>
               <dl class="dl-horizontal doglist">
                        <dt>Registration Nr:</dt><dd>@Model.Reg</dd>
                        <dt> Born:</dt> <dd>@Html.DisplayFor(model => Model.Litter.DateOfBirth) 
                                 in  @Html.DisplayFor(model => Model.Country.Name) </dd>
                                                   
                           @if (Model.Sex == "M") {<dt>Gender: </dt><dd>Male </dd>
                                
                           }
                           else {
                                <dt>Gender: </dt><dd>Female </dd>
                           }
                          <dt>Father:</dt><dd> @Html.DisplayFor(model => model.Litter.Father.Name) </dd>
                          <dt>Mother:</dt><dd> @Html.DisplayFor(model => model.Litter.Mother.Name)</dd> 
                           @if (Model.Litter.PersonId != null) {<dt>Breeder: </dt>
                                                         <dd>@Html.DisplayFor(model => model.Litter.Person.Name)</dd>
                            }
                           else
                           {
                               <dt>Breeder: </dt><dd>No Breeder Registered</dd>
                           }
                           @if (Model.DetailedInfoId != null) {
                               if (Model.DetailedInfo.HD != null)
                               {<dt>HD: </dt><dd>@Html.DisplayFor(model => model.DetailedInfo.HD)</dd>
                               }
                               else
                               {
                                   ;
                               }}
                 </dl>                           
            </div>
            @*Load Photo from Database*@
             <div class="span5">       
                 <div class="dogPic">
                            @if (@Model.PicturePath == null)
                            {
                                <img src="~/Images/dogs/dog1.jpg" alt ="~/Images/dogs/dog1.jpg" />     
                            }
                            else
                            {                           
                                 <img src="@Url.Content(@Model.PicturePath)" alt ="@Html.DisplayFor(model => model.Name)" />                            
                            } 
                  </div> 
             </div>                    
      </div>


