@using (Html.BeginForm("uploadTest", "Backloaddemo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{     
    <div class="col-lg-6 col-sm-6 col-12">
				<div class="input-group">
					<span class="input-group-btn">
						<span class="btn btn-primary btn-file">
							Select picture:<input type="file" name="file">
						</span>
					
					    <input type="text" class="form-control" readonly="true">
                    </span>
                    <span>
                        <button type="submit" class="btn btn-primary" name="Submit" id="Submit">Upload</button>                    
                    </span>
				</div>				
			</div>
}

<script type="text/javascript">
    $(document)
        .on('change', '.btn-file :file', function () {
            var input = $(this),
                numFiles = input.get(0).files ? input.get(0).files.length : 1,
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [numFiles, label]);
        });
     $(document).ready(function () {
        $('.btn-file :file').on('fileselect', function (event, numFiles, label) {
            var input = $(this).parents('.input-group').find(':text'),
					log = numFiles > 1 ? numFiles + ' files selected' : label;

            if (input.length) {
                input.val(log);
            } else {
                if (log) alert(log);
            }
        });
    });
    

</script>