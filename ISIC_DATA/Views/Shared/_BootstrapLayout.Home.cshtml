@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<link rel="SHORTCUT ICON" href="@Url.Content("~/Images/favicon.ico")"/>
<html lang="IS">
    
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>

        @Scripts.Render("~/bundles/jquery")    

    
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
    </head>

    <body>

             <div class="logoff">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
            </div>
       
            <div class="span2 pull-left"><img class="logomynd" src="~/Images/logo1.png" alt="not able to load picture"/>
                </div>
            <div class="span7 pull-left" ><h2>Icelandic Sheepdog International Commitee</h2></div>
                          
            <div class="row-fluid">
               
		        <div class="span12">
			        <div class="navbar navbar-inverse">
				        <div class="navbar-inner navOffset">
					        <div class="container-fluid">
                                <div class="navbar-header">
                                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        
                                        </a>
                                        <div class="nav-collapse collapse navbaradjustment">
                                            <ul class="nav">
                                                @Html.Navigation()
                                            </ul>
                                            <ul class="nav pull-right">
								                    <li>
									                    @Html.ActionLink("Admin", "Index", "Admin")
								                    </li>
						                    </ul>
                                             <div class="container-fluid">
            
                                         </div>
                                     </div>
                                </div>
                            </div>
                        </div>
                 </div>
             </div>
          </div>
        
        <div class="container bodyContainer">
              @if(IsSectionDefined("featured")){
            <div class="hero-unit">
                 @RenderSection("featured", required: false)
            </div>
            }
                     
            @RenderBody()   
            
            <footer style="margin-left: -20px">
                <hr>
                <p>&copy; ISIC @System.DateTime.Now.ToString("yyyy")</p>
            </footer> 
        </div>
         @Scripts.Render("~/neededjs")
         @RenderSection("Scripts", required: false)
    </body>
</html>



