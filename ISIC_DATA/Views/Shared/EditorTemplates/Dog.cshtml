@using BootstrapSupport
﻿@model ISIC_DATA.Models.Dog

<!-- ko foreach: positions -->
<fieldset>
    
    <div class="control-group">
			<label class="control-label">Dog: </label>
			<div class="controls">
				<div class="row-fluid">
					<div class="span3">
                        @Html.TextBoxFor(model => model.Name, new { data_bind = "value: name, namePath: true", placeholder="Name", @class = "input-block-level" })                      
					</div>
					<div class="span3">
                        @Html.TextBoxFor(model => model.Reg, new { data_bind = "value: reg, namePath: true", placeholder="Reg", @class = "input-block-level" })                       					
					</div>
					<div class="span2">
                        @Html.DropDownListFor( model => model.Sex, (SelectList)ViewBag.Gender ,new { data_bind = "value: sex, namePath: true", @class = "input-block-level", required = false})				
					</div>
					<div class="span2">
                        @Html.DropDownListFor( model => model.ColorId, (SelectList)ViewBag.ColorId ,new { data_bind = "value: colorId, namePath: true", @class="input-block-level"})
                    </div>
				</div>
			</div>
		</div>

</fieldset>    					

<!-- /ko -->
