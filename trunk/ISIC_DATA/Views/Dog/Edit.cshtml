@model ISIC_DATA.Models.Dog

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dog</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Reg)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Reg)
            @Html.ValidationMessageFor(model => model.Reg)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewReg)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewReg)
            @Html.ValidationMessageFor(model => model.NewReg)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LitterId, "Litter")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LitterId", String.Empty)
            @Html.ValidationMessageFor(model => model.LitterId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ColorId, "Color")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ColorId", String.Empty)
            @Html.ValidationMessageFor(model => model.ColorId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
