@using BootstrapSupport
@model ISIC_DATA.Models.Dog

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<form>

<fieldset>

    <legend> Dog </legend>

    <ul class="thumbnails">
<li class="span5 clearfix">
  <div class="thumbnail clearfix">
    <img src="http://placehold.it/320x200" alt="ALT NAME" class="pull-left span2 clearfix" style='margin-right:10px'>
    <div class="caption" class="pull-left">
      <a href="http://bootsnipp.com/" class="btn btn-primary icon  pull-right">Edit</a>
      <h4>      
      <a href="#" >@Html.DisplayFor(model => model.Name)</a>
          
      </h4>
        
        <large><b>Reg: </b>@Html.DisplayFor(model => model.Reg)</large>
        
       <div><b>Father:</b> @Html.DisplayFor(model => model.Litter.Father.Name)</div>
       <div><b>Mother:</b> @Html.DisplayFor(model => model.Litter.Mother.Name)</div>
       <div><b>Color comment:</b> @Html.DisplayFor(model => model.ColorComment)</div>
       <div><b>Gender:</b> @Html.DisplayFor(model => model.Sex)</div>
       <div><b>Litter Id:</b> @Html.DisplayFor(model => model.Litter.Id)</div>
       <div Color: @Html.DisplayFor(model => model.Color.ColorText)></div>  
       <div><b>Owner: </b> @Html.DisplayFor(model => model.Person.Name)</div>
       <div><b>Old color:</b>@Html.DisplayFor(model => model.DetailedInfo.OldColor)</div>
      
        
      
    </div>
  </div>
    </ul>
     
    <div class="display-field">
       
    </div>

</fieldset>
</form>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>






