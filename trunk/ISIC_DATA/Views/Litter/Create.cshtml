@model ISIC_DATA.Models.Litter

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Litter</legend>
 

        <div class="editor-label">
            @Html.LabelFor(model => model.DateOfBirth)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateOfBirth)
            @Html.ValidationMessageFor(model => model.DateOfBirth)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BreederId, "Breeder")
        </div>
        <div class="editor-field">
            @Html.DropDownList("BreederId", String.Empty)
            @Html.ValidationMessageFor(model => model.BreederId)
        </div>

      <div class="editor-label">
            @Html.LabelFor(model => model.MotherId, "Mother")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor( model => model.MotherId, (SelectList)ViewBag.MotherId)
            @Html.ValidationMessageFor(model => model.MotherId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FatherId, "Father")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor( model => model.FatherId, (SelectList)ViewBag.FatherId)
            @Html.ValidationMessageFor(model => model.FatherId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
