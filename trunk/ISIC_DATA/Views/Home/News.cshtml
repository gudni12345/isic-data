@model PagedList.IPagedList<ISIC_DATA.Models.NewsArticle>
@using PagedList.Mvc; 
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-2.0.3.js" type="text/javascript"></script>


@{
    ViewBag.Title = "News";
 }

<div class="container-fluid containerLeftMargin">
<div class="row-fluid">
   <h4>Here you can see news and blogs from all of the ISIC countries</h4>
</div>

    
@foreach (var item in Model) 
    
{
      <article class="news-details">
      
       <span><b>@Html.DisplayFor(modelItem => item.Date)</b>&ensp; from @Html.DisplayFor(modelItem => item.Users.Name)</span>
       <h4>@Html.DisplayFor(modelItem => item.Title )</h4>
       
        <div class="more">
            
            @Html.Raw(item.Content)
          
        </div>
       
       </article>

    
} 

</div>

@*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@

@Html.PagedListPager( Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort }) )

<script type="text/javascript">
    $(document).ready(function () {

        var showChar = 500, showtxt = " Read more", hidetxt = "Show less";

        $('.more').each(function () {

            var content = $(this).text();

            if (content.length > showChar) {

                var con = content.substr(0, showChar);

                var hcon = content.substr(showChar, content.length - showChar);

                var txt = con + '<span class="dots">...</span><span class="morecontent"><span>' + hcon + '</span>&nbsp;&nbsp;<a href="" class="moretxt">' + showtxt + '</a></span>';

                $(this).html(txt);

            }

        });


        $(".moretxt").click(function () {

            if ($(this).hasClass("sample")) {

                $(this).removeClass("sample");
                $(this).text(showtxt);

            } else {

                $(this).addClass("sample");

                $(this).text(hidetxt);

            }

            $(this).parent().prev().toggle();

            $(this).prev().toggle();

            return false;

        });

    });

</script>

<style type="text/css">




.morecontent span {

display: none;

}
</style>  
    

